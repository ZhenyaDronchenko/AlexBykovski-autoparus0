{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link type='text/css' rel='stylesheet' href='css/registration.css'>
{% endblock %}

{% block body %}
    <article id=''>

        <form id='registrationForm' action="{{ path("registration") }}" method="post" novalidate enctype="multipart/form-data">
            {{ form_widget(form._token) }}
            <span id='reg'>Регистрация</span>
            {{ form_widget(form.name, {attr: {"placeholder": "Ваше имя", "maxlength" : "40", "class" : "inputF2" }}) }}
            <div class="form-error-message">
                {{ form_errors(form.name) }}
            </div>
            <br/><br/>
            {{ form_widget(form.email, {attr: {"placeholder": "Ваш e-mail", "maxlength" : "40", "class" : "inputF2" }}) }}
            <div class="form-error-message">
                {{ form_errors(form.email) }}
            </div>
            <br/><br/>
            {{ form_widget(form.phone, {attr: {"placeholder": "Ваш телефон", "maxlength" : "40", "class" : "inputF2" }}) }}
            <div class="form-error-message">
                {{ form_errors(form.phone) }}
            </div>
            <br/><br/>
            {{ form_widget(form.password.first, {attr: {"placeholder": "Придумайте пароль", "maxlength" : "40", "class" : "inputF2" }}) }}
            <div class="form-error-message">
                {{ form_errors(form.password.first) }}
            </div>
            <br/><br/>
            {{ form_widget(form.password.second, {attr: {"placeholder": "Повторите пароль", "maxlength" : "40", "class" : "inputF2" }}) }}
            <div class="form-error-message">
                {{ form_errors(form.password.second) }}
            </div>
            <br/><br/>
            {{ form_widget(form.captcha, {attr: {"placeholder": "Введите код с картинки", "class" : "inputF2"}}) }}
            <div class="form-error-message">
                {{ form_errors(form.captcha) }}
            </div>
            <br/><br/>
            {{ form_widget(form.submit, {attr: {label: 'Зарегистрироваться'}}) }}
        </form>
        <br/><br/><br/><br/>

    </article>
{% endblock %}