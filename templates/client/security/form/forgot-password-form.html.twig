<form id="forgot-password-form" class="registration" action="" method="post" novalidate>
    {{ form_widget(form._token) }}
    <fieldset>
        {% set isEmail = '@' in form.email.vars.value or not form.email.vars.value %}
        <legend class="registration-title" data-text="{{ page.headline }}"></legend>
        <div class="text">Введите адрес электронной почты или телефон, указанные при регистрации:</div>
        <div class="block-tel-email">
            <div class="{{ isEmail ? "registration-email" : "registration-tel" }}">
                <div class="wrapper">
                    {{ form_widget(form.email, {attr: {"placeholder" : (isEmail ? "Ваш e-mail" : "+375  (__)  ___ - __ - __"), "class" : "input type-username", "data-change-type" : (isEmail ? "tel" : "email" ), "data-change-placeholder" : (isEmail ? "+375  (__)  ___ - __ - __" : "Ваш e-mail" )}, "type" : (isEmail ? "email" : "tel")}) }}
                    <button type="button" class="btn" clear-field-button target-element="#{{ form.email.vars.id }}">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" x="0px" y="0px" width="20px" height="20px" viewBox="0 0 50 50">
                            <line stroke="#000000" stroke-width="4" stroke-miterlimit="10" x1="7.741" y1="7.741" x2="42.359" y2="42.359"/>
                            <line stroke="#000000" stroke-width="4" stroke-miterlimit="10" x1="42.258" y1="7.742" x2="7.618" y2="42.382"/>
                        </svg>
                    </button>
                </div>
                {% for error in form.email.vars.errors%}
                    <span class="prompt">{{ error.message }}</span>
                {% endfor %}
            </div>

            <button class="btn-log change-type-username" data-change-value="Восстановить пароль {{ isEmail ? "через e-mail" : "по номеру телефону" }}" type="button">Восстановить пароль {{ isEmail ? "по номеру телефону" : "через e-mail" }}</button>
        </div>
        {{ form_widget(form.submit, { attr: {"label": "Восстановить пароль", class: "button button-show"}}) }}
    </fieldset>
</form>