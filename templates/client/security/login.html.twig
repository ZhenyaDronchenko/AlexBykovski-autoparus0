{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel='stylesheet' href='/css/style-new.css'>
    <link rel='stylesheet' href='/css/login.css'>
{% endblock %}

{% block body %}
    <div id="form-login-container" ng-controller="LoginCtrl as login"
         ng-init="login.init('.login-form', '{{ path("login_check") }}', '#form-login-container')">
        {% include('/client/security/form/login-form.html.twig') with {"form" : form} %}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/client/directive/clear-field-button.js"></script>
    <script src="/js/client/directive/password-show-button.js"></script>
    <script src="/js/client/controller/security/login-controller.js"></script>
    {#<script src="/js/client/controller/security/registration-controller.js"></script>#}
    <script>
        let popup1 = document.querySelector('.overlay1');
        let popup2 = document.querySelector('.overlay2');

        if(popup1){
            let closePopupButton1 = popup1.querySelector('.modal-close1');

            closePopupButton1.addEventListener('click', function () {
                popup1.classList.remove('modal--show');
            });
        }

        if(popup2){
            let closePopupButton2 = popup2.querySelector('.modal-close2');

            closePopupButton2.addEventListener('click', function () {
                popup2.classList.remove('modal--show');
            });
        }
    </script>
{% endblock %}