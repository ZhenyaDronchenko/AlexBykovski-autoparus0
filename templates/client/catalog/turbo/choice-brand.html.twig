{% extends 'base.html.twig' %}

{% block title %}{{ page.title }}{% endblock %}
{% block meta_description %}{{ page.description }}{% endblock %}

{% block stylesheets %}
    <link rel='stylesheet' href='/css/catalog/auto/turbo/final-page.css'>
{% endblock %}

{% block body %}
    <main class="container">
        <ul id="breadcrumbs" itemscope itemtype="http://schema.org/BreadcrumbList">
            <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                <a class="user-link user-link--icon" href="{{ path("homepage") }}" title="{{ homepageTitle }}" itemprop="item">
                    <span class="user-name" itemprop="name">Главная</span>
                    <svg class="user-icon" x="0px" y="0px" viewBox="0 0 16 16" width="20px" height="20px">
                        <polyline fill="none" stroke="#444" stroke-miterlimit="10" points="1,8.5 8,2 15,8.5 "/>
                        <polyline fill="none" stroke="#444" stroke-miterlimit="10" points="2.5,7 2.5,13.5 6.5,13.5 6.5,8.5 9.5,8.5 9.5,13.5   13.5,13.5 13.5,7 "/>
                    </svg>
                    <meta itemprop="position" content="1">
                </a>
            </li>
            <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                <a class="current" nohref itemprop="item">/
                    <span itemprop="name">Поиск</span>
                    <meta itemprop="position" content="2">
                </a>
            </li>
        </ul>

        <section class="turbo">
            <h1 class="turbo-title" data-text="{{ page.headline1 }}"></h1>
            <div class="text-block">
                <div id='text1' class='text1Hide'>{{ page.text1 | raw }}</div>
            </div>

            <form class='modform' action="#" method="get">
                <input id="brand-autocomplete" class="select" type="search"
                       auto-сomplete-autoparus add-url="{{ path("turbo_catalog_choice_brand") }}"
                       method-search="searchBrands" identifier-field="brand-autocomplete" is-preload-data="true"
                       name="search" placeholder="Марка авто:"
                       scroll-to-element scroll-by-click="true" before-top="30">
            </form>

            <ul class="mod-list">
                {% for brand in brands %}
                    <li>
                        <a class="mod-link" href="{{ path("turbo_catalog_choice_model", {"urlBrand" : brand.url}) }}">
                            <img src="{{ image_url(brand.thumbnailLogo64) }}" alt="{{ brand.brandEn }}" title="Запчасти новые и БУ для {{ brand.brandEn }}">
                        </a>
                    </li>
                {% endfor %}
            </ul>


            <h2 class="turbo-subtitle" data-text="{{ page.headline2 }}"></h2>
            <div class="turbo-text">{{ page.text2 | raw }}</div>
        </section>
    </main>
{% endblock %}