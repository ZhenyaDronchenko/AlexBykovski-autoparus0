{% extends 'base.html.twig' %}

{% block title %}Страница выбора категории товара для подачи или редактирования товара или товарной группы{% endblock %}
{% block stylesheets %}
    <link rel='stylesheet' href='/css/user-office/product-categories.css'>
{% endblock %}

{% block exit_profile %}
    <a class="registration-link" href="{{ logout_path("main") }}">Выйти из кабинета</a>
{% endblock %}

{% block body %}
    <main class="container">
        <ul id="breadcrumbs">
            <li>
                <a class="user-link user-link--icon" href="{{ path("show_user_office") }}" title="Ваш персональный и бизнес профиль">
                    <span class="user-name">{{ app.user.name }}</span>
                    <svg class="user-icon" width="20px" height="20px" viewBox="0 0 50 50" fill="none">
                        <path d="M8.72222 30V28.5H7.22222H6.5V25.1323L8.47907 14H41.5209L43.5 25.1323V28.5H42.7778H41.2778V30V43.5H39.8333V30V28.5H38.3333H29.4444H27.9444V30V43.5H8.72222V30ZM25 41.5H26.5V40V30V28.5H25H11.6667H10.1667V30V40V41.5H11.6667H25ZM8.72222 6.5H41.2778V8.5H8.72222V6.5Z" stroke="black" stroke-width="3"/>
                    </svg>
                </a>
            </li>
            <li><a class="current"><span class="line">/</span> Товары</a></li>
        </ul>

        <section class="items">
            <h1 class="title">{{ default_text(1).headline }}</h1>
            <ul class="items-block">
                <li><a class="items-link" href='{{ path("user_profile_product_categories_spare_part") }}'><span>Автозапчасти (автотовары) товары для автомобилей</span><img src="{{ image_url(default_image(15).image) }}" alt="лого"></a></li>
                <li><a class="items-link" href=''><span>Автомобили (легковые, грузовые, спецтехника)</span><img src="{{ image_url(default_image(16).image) }}" alt="лого"></a></li>
            </ul>
            <div>{{ default_text(1).text | raw }}</div>
        </section>
    </main>
{% endblock %}