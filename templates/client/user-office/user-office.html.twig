        <div class="profil">
            <div class="heading">
                <div class="profil-items">
                    <div class="user-info user-info--line">
                        <div class="user-logo" user-upload-link link-selector="#user-photo-link" input-selector="#user-photo-input" action-method="">
                            <img id="user-photo" src="{{ image_url(app.user.photo, "user") }}" alt="Автолюбители" class="foto-user">
                            <a href="" id="user-photo-link" class="user-link"> + </a>
                            <input id="user-photo-input" type="file" style="display: none">
                            <a class="user-name">{{ app.user.name }}</a>
                        </div>
                        <div class="user-about">
                            <a href="{{ path("show_user_base_profile") }}" class="button">Редактировать профиль <i class="fa fa-check" aria-hidden="true"></i></a>
                            {% for car in app.user.cars %}
                                <a class="user-avto">{{ car.brand.name }} {{ car.model ? car.model.name : '' }}, {{ car.year ? car.year : '' }}</a>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="profil-items">
                    <div class="user-info">
                        <div class="user-logo">
                            <img src="/img/userfoto.jpg" alt="Автолюбители" class="foto-user">
                            <a href="#" class="user-link"> + </a>
                        </div>

                        <div class="user-edit">
                            <a href="{{ path("show_user_business_office") }}" class="button button-rdc">{{ isSeller ? "Редактировать" : "Создать" }} бизнес профиль <i class="fa fa-check" aria-hidden="true"></i></a>
                            <div class="btn-block">
                                {% if isSeller %}
                                    {% if app.user.sellerData.sellerCompany.isSeller %}
                                        <a class="user-btn" href="{{ path("user_profile_product_categories") }}">Товары</a>
                                    {% endif %}
                                    {% if app.user.sellerData.sellerCompany.isService %}
                                        <a class="user-btn">Услуги</a>
                                    {% endif %}
                                    {% if app.user.sellerData.sellerCompany.isNews %}
                                        <a class="user-btn">Статьи</a>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% if isSeller %}
                        <a class="user-company">{{ app.user.sellerData.sellerCompany.companyName }}</a>
                    {% endif %}
