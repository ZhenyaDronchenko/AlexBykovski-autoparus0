<!DOCTYPE html>
<html ng-app="autoparusApp">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="{% block meta_description %}Автопарус{% endblock %}">
        <meta name="author" content="">
        <link href="https://fonts.googleapis.com/css?family=Comfortaa:400,700&amp;subset=cyrillic" rel="stylesheet">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
              rel="stylesheet">
        <title>{% block title %}Автопарус{% endblock %}</title>
        <link rel='stylesheet' href='/bower-components/jquery-ui/themes/base/jquery-ui.min.css'>
        <link rel='stylesheet' href='/css/normalize-new.min.css'>
        <link rel='stylesheet' href='/css/base-style.css'>
        {% block stylesheets %}
            <link rel='stylesheet' href='/css/style-new.css'>
        {% endblock %}
        {{ show_code("head") | raw }}
    </head>
    <body>
        <header class="header">
            <div class='hatWrapp container'>
                <div>
                    <a class='logo' href='{{ path("homepage") }}' title='На главную'>Автопарус</a>
                </div>
                <div class='hamburger'>
                    <div class='hamChild' onclick='menuActive()'>
                        <span id='g-1' class='gamburger'></span>
                        <span id='g-2' class='gamburger'></span>
                        <span id='g-3' class='gamburger'></span>
                    </div>
                </div>
            </div>

            <div class="container">

                <nav id='menu' class='m01 '>
                    <div class='menu-01'>
                        <div>
                            <ul>
                                <li><a href="{{ path("show_brand_catalog_choice_brand") }}">Каталог</a></li>
                                <li><a href="{{ path("show_spare_part_catalog_choice_spare_part") }}">Запчасти</a></li>
                            </ul>
                        </div>
                        <div>
                            <ul>
                                {% if app.user %}
                                    {% set userName = (app.user.name | length) < 14 ? app.user.name : app.user.name[:13] ~ '...'%}
                                    <li><a href="{{ logout_path("main") }}">Выход</a></li>
                                    {% if app.user.hasRole(constant('App\\Entity\\User::ROLE_ADMIN')) %}
                                        <li><a href="{{ path("sonata_admin_dashboard") }}">Admin</a></li>
                                    {% else %}
                                        <li><a href="{{ path("show_user_office") }}">{{ userName }}</a></li>
                                    {% endif %}
                                {% else %}
                                    <li><a href="{{ path("login") }}">Вход</a></li>
                                    <li><a href="{{ path("registration") }}">Регистрация</a></li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                    <div class='menu-02'>
                        <div>
                            <ul>
                                <li><a href='#'>Пользователям</a></li>
                                <li><a href='#'>Продавцам</a></li>
                            </ul>
                        </div>
                        <div>
                            <ul>
                                <li><a href='#'>Новости</a></li>
                                <li><a href='#'>Обратная связь</a></li>
                            </ul>
                        </div>
                    </div>
                </nav>

            </div>

        </header>

        {% block body %}{% endblock %}

        <footer class="footer">
            <div class="container">
                <nav class="navigation">
                    {% if app.request.attributes.get('_route') == "homepage" %}
                        <div class="sail">
                            <img src="/img/windsurfing.png" alt="Парус">
                            <img src="/img/windsurfing.png" alt="Парус">
                            <img src="/img/windsurfing.png" alt="Парус">
                            <img src="/img/windsurfing.png" alt="Парус">
                            <img src="/img/windsurfing.png" alt="Парус">
                        </div>
                    {% endif %}
                    <ul class="navigation-block">
                        <li><a href="{{ path("homepage") }}"><img src="/img/home.png" alt="icon"></a></li>
                        <li><a href="{{ app.user ? "" : path("registration") }}"><img src="/img/engine.png" alt="icon"></a></li>
                        <li><a href="{{ path("show_spare_part_catalog_choice_spare_part") }}"><img src="/img/image.png" alt="icon"></a></li>
                        <li><a href=""><img src="/img/search.png" alt="icon"></a></li>
                        <li><a href="{{ path("show_brand_catalog_choice_brand") }}"><img src="/img/avto.png" alt="icon"></a></li>
                        <li><a href="{{ path("show_city_catalog_choice_city") }}"><img src="/img/shop.png" alt="icon"></a></li>
                        <li>
                            {% set personLink = app.user ? (app.user.hasRole(constant('App\\Entity\\User::ROLE_ADMIN')) ? "sonata_admin_dashboard" : "show_user_office" ) : "login" %}
                            <a href="{{ path(personLink) }}"><img class="img-last" src="/img/component.png" alt="icon"></a>
                        </li>
                    </ul>
                </nav>
                <div class="wrapper-list">
                    <ul class="navigation-list">
                        <li><a href="#"><img src="/img/toyota.png" alt="icon"></a></li>
                        <li><a href="#"><img src="/img/toyota.png" alt="icon"></a></li>
                        <li><a href="#"><img src="/img/toyota.png" alt="icon"></a></li>
                        <li><a href="#"><img src="/img/toyota.png" alt="icon"></a></li>
                        <li><a href="#"><img src="/img/toyota.png" alt="icon"></a></li>
                        <li><a href="#"><img src="/img/toyota.png" alt="icon"></a></li>
                        <li><a href="#"><img src="/img/toyota.png" alt="icon"></a></li>
                    </ul>
                </div>
            </div>
        </footer>

        <script src='/bower-components/angular/angular.min.js'></script>
        <script src='/bower-components/jquery/dist/jquery.min.js'></script>
        <script src='/bower-components/jquery-ui/jquery-ui.min.js'></script>
        <script src='/bower-components/jquery.maskedinput/dist/jquery.maskedinput.js'></script>
        <script src='/js/general-settings.js'></script>
        <script src='/js/script-new.js' ></script>
        <script src='/js/client/app.js' ></script>
        <script src='/js/client/service/autocomplete-spare-part.js' ></script>
        <script src='/js/client/directive/autocomplete-autoparus.js' ></script>
        <script src='/js/client/directive/voice-input.js' ></script>

        {% block javascripts %}{% endblock %}
        {{ show_code("body") | raw }}
    </body>
</html>
